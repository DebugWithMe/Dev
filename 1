                <td>
                  <ng-container *ngIf="comp.value.details && typeof comp.value.details === 'object' && Object.keys(comp.value.details).length > 0; else noDetailsOrPrimitive">
                    <app-json-viewer-node [data]="comp.value.details" [displayNullAsNA]="true"></app-json-viewer-node>
                  </ng-container>
                  <ng-template #noDetailsOrPrimitive>
                    <span *ngIf="!comp.value.details || Object.keys(comp.value.details).length === 0">-</span>
                    <span *ngIf="comp.value.details && typeof comp.value.details !== 'object'">{{ formatSimpleValue(comp.value.details) }}</span>
                  </ng-template>
                </td>


  @Input() displayNullAsNA: boolean = false; // <-- New Input


getPrimitiveDisplayValue(): string {
    if (this.data === null || this.data === undefined) {
      return this.displayNullAsNA ? 'N/A' : String(this.data); // String(null) is 'null', String(undefined) is 'undefined'
    }
    return String(this.data);
  }

       [displayNullAsNA]="displayNullAsNA">
